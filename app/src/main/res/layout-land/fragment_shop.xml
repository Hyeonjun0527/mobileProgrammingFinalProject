<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/store"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="보유 금액: 0원"
        android:padding="20px"
        android:background="@drawable/rounded_background2"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/fl_image_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_background2"
        android:padding="10px"
        app:layout_constraintTop_toBottomOf="@id/tv_money"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fl_image_container2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_max="150dp"
        app:layout_constraintWidth_percent="0.45">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/cunning" />
    </FrameLayout>

    <Button
        android:id="@+id/btn_item_30_points"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="시작점수 30점"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/fl_image_container"
        app:layout_constraintStart_toStartOf="@id/fl_image_container"
        app:layout_constraintEnd_toEndOf="@id/fl_image_container" />

    <FrameLayout
        android:id="@+id/fl_image_container2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_background2"
        android:padding="10px"
        app:layout_constraintTop_toBottomOf="@id/tv_money"
        app:layout_constraintStart_toEndOf="@id/fl_image_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_max="150dp"
        app:layout_constraintWidth_percent="0.45">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/book" />
    </FrameLayout>

    <Button
        android:id="@+id/btn_item_double_points"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="공부 점수 2배"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/fl_image_container2"
        app:layout_constraintStart_toStartOf="@id/fl_image_container2"
        app:layout_constraintEnd_toEndOf="@id/fl_image_container2" />

</androidx.constraintlayout.widget.ConstraintLayout>
